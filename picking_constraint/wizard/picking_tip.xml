<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="picking_tip_wizard_form_view" model="ir.ui.view">
            <field name="name">picking.tip.wizard</field>
            <field name="model">picking.tip.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div>
                            <field name="tip" force_save="1" nolabel="1" readonly="1"/>
                        </div>
                        <footer>
                            <button name="active_create_purchsdfase_order" string="Continue" type="object"
                                    class="oe_highlight"/>
                            <button string="CANCEL" class="btn btn-danger" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>


    </data>
</odoo>
